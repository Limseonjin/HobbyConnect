<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.mvc.member.repository.MypageMapper">
    <select id="findMember" resultType="Person">
        SELECT * FROM tbl_person
        WHERE person_id = #{personId}
    </select>

    <select id="findAllMyMainBoard" resultType="MainBoard">
        SELECT * FROM tbl_main_board
        WHERE person_id = #{personId}
    </select>

    <select id="findAllMyBoard" resultType="Board">
        SELECT * FROM tbl_board
        WHERE person_id = #{personId}
    </select>

    <select id="findAllMyReply" resultType="Reply">
        SELECT * FROM tbl_reply
        WHERE person_id = #{personId}
    </select>

    <select id="findIntroduction" resultType="Person">
        SELECT introduction FROM tbl_person
        WHERE person_id = #{personId}
    </select>

    <update id="modifyInfo">
        UPDATE tbl_person
        SET nickname = #{nickname},
            email = #{email},
            introduction = #{introduction}
        WHERE person_id = #{personId}
    </update>

    <update id="modifyPassword">
        UPDATE tbl_person
        SET password = #{password}
        WHERE person_id = #{personId}
    </update>

    <delete id="delMember">
        DELETE FROM tbl_person
        WHERE person_id = #{personId}
    </delete>

</mapper>
